{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Mkdir",
      "type": "shell",
      "command": "mkdir -p ${workspaceFolder}/out"
    },
    {
      "label": "Scaffold",
      "type": "shell",
      "command": "cmake ..",
      "options": {
        "cwd": "${workspaceFolder}/out"
      }
    },
    {
      "dependsOn": [
        "Mkdir",
        "Scaffold"
      ],
      "dependsOrder": "sequence",
      "label": "Build",
      "type": "shell",
      "command": "make",
      "options": {
        "cwd": "${workspaceFolder}/out"
      },
      "group": {
        "isDefault": true,
        "kind": "build"
      }
    }
  ]
}